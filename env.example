# Base de datos PostgreSQL
# Ejemplo local: postgresql://usuario:password@localhost:5432/nombre_db?schema=public
# Ejemplo remoto: postgresql://usuario:password@host.ejemplo.com:5432/nombre_db?schema=public
DATABASE_URL="postgresql://eventos_user:tu_password_seguro@localhost:5432/eventos_app?schema=public"

# JWT Secret (genera uno seguro con: openssl rand -base64 32)
# IMPORTANTE: Cambia esto a un valor único y seguro
JWT_SECRET="cambia-esto-por-un-secreto-seguro"

# URLs del servidor
# En desarrollo (local)
EXPO_PUBLIC_RORK_API_BASE_URL="http://localhost:8081"
# En producción (reemplaza con tu dominio)
# EXPO_PUBLIC_RORK_API_BASE_URL="https://tu-dominio.com"

EXPO_PUBLIC_TOOLKIT_URL="https://toolkit.rork.com"

# Stripe (opcional, para pagos con tarjeta)
# Obtén tus claves en: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Configuración del servidor
PORT=8081
NODE_ENV=development

# Configuración de subida de archivos
MAX_FILE_SIZE=10485760
UPLOAD_DIR="./uploads"
